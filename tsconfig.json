{
  "exclude": ["./dist/**", "./node_modules/**"],
  "compilerOptions": {
    "allowJs": true,
    "alwaysStrict": true,
    "checkJs": true,
    "importHelpers": true,
    "strict": true,
    "rootDir": "./src/",
    "outDir": "./dist/",
    "target": "ESNext",
    "module": "NodeNext",
    "moduleResolution": "NodeNext",
    "lib": ["ESNext"],
    "paths": {
      "utility-types": ["./src/utility-types.d.ts"],
      "api-types": ["./src/api-types.d.ts"]
    }
  }
}
